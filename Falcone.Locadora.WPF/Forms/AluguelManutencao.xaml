<Window x:Class="Falcone.Locadora.WPF.Forms.AluguelManutencao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Aluguel de Veículo" Height="400" Width="554">
    <Grid Width="522">
    <TextBox Height="23" HorizontalAlignment="Left" Margin="12,38,0,0" Name="tbDocumento" VerticalAlignment="Top" Width="120" />
    <TextBox Height="23" HorizontalAlignment="Right" Margin="0,38,140,0" Name="tbNome" IsEnabled="False" VerticalAlignment="Top" Width="244" />
    <RadioButton Content="Documento" Height="16" Checked="rbDocumento_Checked" IsChecked="True" GroupName="TipoPesquisa" ToolTip="Pesquisar cliente pelo número do documento (CPF ou Passaporte)" HorizontalAlignment="Left" Margin="12,16,0,0" Name="rbDocumento" VerticalAlignment="Top" />
    <RadioButton Content="Nome" Height="16" HorizontalAlignment="Left" Checked="rbDocumento_Checked" IsChecked="False" GroupName="TipoPesquisa" ToolTip="Pesquisar cliente pelo nome" Margin="138,16,0,0" Name="rbNome" VerticalAlignment="Top" />
  </Grid>
</Window>
