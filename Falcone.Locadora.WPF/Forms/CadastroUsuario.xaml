<Window x:Class="Falcone.Locadora.WPF.Forms.CadastroUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CadastroUsuario" Height="300" Width="300">
    <Grid>
        <Label Content="Nome:" HorizontalAlignment="Left" Margin="27,22,0,0" VerticalAlignment="Top"/>
        <Label Content="Login:" HorizontalAlignment="Left" Margin="27,53,0,0" VerticalAlignment="Top"/>
        <Label Content="Senha:" HorizontalAlignment="Left" Margin="27,85,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Name="tbNome" Height="23" Margin="116,26,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbLogin" HorizontalAlignment="Left" Height="23" Margin="116,57,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="tbSenha" HorizontalAlignment="Left" Margin="116,85,0,0" VerticalAlignment="Top"  Width="120"/>
        <Button x:Name="btGravar" Content="Gravar" HorizontalAlignment="Left" Margin="27,138,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.136,-0.393" Click="btGravar_Click"/>

    </Grid>
</Window>
